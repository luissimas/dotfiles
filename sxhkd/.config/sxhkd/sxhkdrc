########################
#wm independent hotkeys#
########################

# program launcher
super + p
  dmenu_run

# power prompt
super + shift + q
  $HOME/scripts/power-prompt.sh

# lock screen
super + alt + q
  betterlockscreen -l dim

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# terminal emulator
super + BackSpace
  kitty

# applications
super + shift + {w,o,d,z}
	{$BROWSER,obsidian,discord,zathura}

# scripts
super + shift + {t,b,p,y,s,a,c,e}
	~/scripts/{theme-switcher.sh,list-books.sh,print.sh,ytb.sh,spotify.sh,audiosink.sh,meets.sh,emacs.sh}

# quick screenshot to clipboard
super + a
  maim -su | xclip -selection clipboard -t image/png

# volume
super + shift + {equal,minus}
  pamixer --allow-boost {-i,-d} 5

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
  pamixer --allow-boost {-i,-d} 5

# mute volume
super + shift + m
	pamixer -t

XF86AudioMute
	pamixer -t

# screen brightness
XF86MonBrightnessUp
  light -A 10

XF86MonBrightnessDown
  light -U 10

###############
#bspwm hotkeys#
###############

# restart bspwm
super + alt + r
	bspc wm -r

# close window
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# show/hide polybar
super + b
  polybar-msg cmd toggle && bspc config top_padding {0, 20}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# window gaps
super + alt + {equal,minus}
  bspc config window_gap $((`bspc config window_gap` {+,-} 5))

#
# state/flags
#

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop (useful for monocle layout)
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + {i,o}
	bspc desktop -f {prev,next}.local

# swap monitor focus/node
super + {_,shift} + space
	bspc {monitor -f,node -m} next

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop on the focused monitor
super + {_,shift + }{1-5}
	bspc {desktop -f,node -d} focused:'^{1-5}'

###########
#preselect#
###########

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + Escape
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
