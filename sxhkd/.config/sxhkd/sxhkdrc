########################
#wm independent hotkeys#
########################

# program launcher
super + p
  rofi -show run

# power prompt
super + shift + q
  $HOME/scripts/power-prompt.sh

# lock screen
super + alt + shift + l


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# applications
super + shift + {w,d,z,k}
	{$BROWSER,discord,zathura,kitty}

# scripts
super + shift + {t,p,e}
	~/scripts/{theme-switcher.sh,print.sh,emacs.sh}

# quick screenshot to clipboard
super + a
  maim -su | xclip -selection clipboard -t image/png

# volume
super + shift + {equal,minus}
  pamixer --allow-boost {-i,-d} 5

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
  pamixer --allow-boost {-i,-d} 5

# mute volume
super + shift + m
	pamixer -t

XF86AudioMute
  pamixer -t

# screen brightness
XF86MonBrightnessUp
  brillo -q -A 5

XF86MonBrightnessDown
  brillo -q -U 5

###############
#bspwm hotkeys#
###############

# restart bspwm
super + alt + r
	bspc wm -r

# close window
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# show/hide polybar
super + b
  polybar-msg cmd toggle && bspc config top_padding {0,20}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# window gaps
super + alt + {equal,minus}
  bspc config window_gap $((`bspc config window_gap` {+,-} 5))

#
# state/flags
#

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop (useful for monocle layout)
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + {i,o}
	bspc desktop -f {prev,next}.local

# set sticky window
super +  space
	bspc node -g sticky

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop on the focused monitor
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} focused:'^{1-9}'

# swap monitor focus/node
super + {_,shift} + BackSpace
	bspc {monitor -f,node -m} next

###########
#preselect#
###########

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + Escape
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
