[colors]
background = ${xrdb:color0:#000}
foreground = ${xrdb:color7:#111}
highlight = ${xrdb:color15:#222}

;  _                    
; | |__   __ _ _ __ ___ 
; | '_ \ / _` | '__/ __|
; | |_) | (_| | |  \__ \
; |_.__/ \__,_|_|  |___/

[bar/bar]
enable-ipc=true
height = 20
width = 80%
offset-x = 10%
offset-y = 10
radius = 10
padding=2
line-size = 2

border-size = 0
border-color = ${colors.foreground}

background = ${colors.background}
foreground = ${colors.foreground}

font-0=Fira Code Nerd Font:style=Regular:pixelsize=10:antialias=true;2

module-margin = 1

modules-left = bspwm 
; Spotify (scripts at github.com/dietervanhoof/polybar-spotify-controls)
;modules-center = previous playpause next spotify
; Mpd
modules-center = xwindow
modules-right = packages network temperature cpu alsa time

scroll-up = bspwn-wsnext
scroll-down = bspwn-wsprev

wm-restack = bspwm
override-redirect = false
