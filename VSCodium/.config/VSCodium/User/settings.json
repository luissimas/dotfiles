{
  // Theme
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",

  // Font
  "editor.fontFamily": "Iosevka Padawan",
  "editor.fontWeight": 400,
  "editor.fontLigatures": true,
  "editor.fontSize": 13,

  // Editor
  "workbench.editor.showTabs": false,
  "editor.mouseWheelZoom": true,
  "editor.renderLineHighlight": "none",
  "breadcrumbs.enabled": false,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.semanticHighlighting.enabled": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "workbench.editor.labelFormat": "short",
  "editor.parameterHints.enabled": true,

  // Vim
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [" "],
      "commands": ["whichkey.show"],
      "recursive": false
    },
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [" "],
      "commands": ["whichkey.show"],
      "recursive": false
    },
    {
      "before": ["L"],
      "after": ["$"],
      "recursive": false
    },
    {
      "before": ["H"],
      "after": ["0"],
      "recursive": false
    },
    {
      "before": ["\\", "f", "f"],
      "commands": ["workbench.action.quickOpen"],
      "recursive": false
    },
    {
      "before": ["\\", "f", "s"],
      "commands": ["workbench.action.files.save"],
      "recursive": false
    },
    {
      "before": ["\\", "w", "q"],
      "commands": ["workbench.action.closeActiveEditor"],
      "recursive": false
    },
    {
      "before": ["\\", "w", "h"],
      "commands": ["workbench.action.focusLeftGroup"],
      "recursive": false
    },
    {
      "before": ["\\", "w", "l"],
      "commands": ["workbench.action.focusRightGroup"],
      "recursive": false
    },
    {
      "before": ["\\", "w", "v"],
      "commands": ["workbench.action.splitEditor"],
      "recursive": false
    },
    {
      "before": ["\\", "x"],
      "commands": ["workbench.action.showCommands"],
      "recursive": false
    },
    {
      "before": ["\\", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "recursive": false
    },
    {
      "before": ["y", "s"],
      "after": ["<plugys>"],
      "recursive": false
    },
    {
      "before": ["y", "s", "s"],
      "after": ["<plugys>", "<plugys>"],
      "recursive": false
    },
    {
      "before": ["c", "s"],
      "after": ["<plugcs>"],
      "recursive": false
    },
    {
      "before": ["d", "s"],
      "after": ["<plugds>"],
      "recursive": false
    },
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "whichkey.delay": 500,

  // Formatting
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // File tree
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  // Window
  "window.menuBarVisibility": "toggle",
  "window.autoDetectHighContrast": false,
  "window.restoreWindows": "none",

  // Terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shell.linux": "/bin/zsh",

  // Neovim integration
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "workbench.editor.tabCloseButton": "off",

  // Gitlens
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.defaultDateFormat": "DD/MM/YYYY, H:mm",
  "gitlens.defaultDateShortFormat": "DD/MM/YYYY",
  "gitlens.defaultTimeFormat": "H:mm",
  "sync.gist": "08d15fa159b11fb683c52c8de4bb84b9",
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,
  "color-highlight.enable": false,
  "sync.autoDownload": true,
  "sync.quietSync": true,
  "material-icon-theme.hidesExplorerArrows": true,
  "files.associations": {
    "*.rmd": "markdown"
  },

  // Auto imports
  "typescript.tsserver.log": "off",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,

  // Material icons
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "entities": "class",
    "domain": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe",
    "providers": "include",
    "subscribers": "messages",
    "useCases": "controller",
    "kafka": "scripts",
    "mappers": "meta",
    "_shared": "shared",
    "eslint-config": "tools",
    "kube": "kubernetes"
  },

  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    "*.proto": "3d",
    "*.webpack.js": "webpack"
  },
  "material-icon-theme.languages.associations": {
    "dotenv": "tune"
  },

  // Misc
  "cSpell.language": "en,pt-BR",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "scm.diffDecorations": "none",
  "scm.diffDecorationsGutterAction": "none",
  "git.autofetch": true,
  "git.confirmSync": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Palenight Theme",
  "projectManager.git.baseFolders": ["~/liven", "~/cati"],
  "gitlens.codeLens.enabled": false,
  "vim.easymotion": true,
  "editor.renderWhitespace": "none"
}
