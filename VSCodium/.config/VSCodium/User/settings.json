{
  // Theme
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Nord",
  "workbench.iconTheme": "material-icon-theme",

  // Font
  "editor.fontFamily": "Iosevka Padawan",
  "editor.fontWeight": 400,
  "editor.fontLigatures": true,
  "editor.fontSize": 13,

  // Editor
  "workbench.editor.showTabs": false,
  "editor.mouseWheelZoom": true,
  "editor.renderLineHighlight": "none",
  "breadcrumbs.enabled": false,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.semanticHighlighting.enabled": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "workbench.editor.labelFormat": "short",
  "editor.parameterHints.enabled": true,

  // Vim
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["L"], "after": ["$"] },
    { "before": ["H"], "after": ["0"] },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "w", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "w", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<leader>", "w", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<leader>", "w", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    }
  ],

  // Formatting
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // File tree
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  // Window
  "window.menuBarVisibility": "toggle",
  "window.autoDetectHighContrast": false,
  "window.restoreWindows": "none",

  // Terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shell.linux": "/bin/zsh",

  // Neovim integration
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "workbench.editor.tabCloseButton": "off",

  // Gitlens
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.defaultDateFormat": "DD/MM/YYYY, H:mm",
  "gitlens.defaultDateShortFormat": "DD/MM/YYYY",
  "gitlens.defaultTimeFormat": "H:mm",
  "sync.gist": "08d15fa159b11fb683c52c8de4bb84b9",
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,
  "color-highlight.enable": false,
  "sync.autoDownload": true,
  "jsync.autoUpload": true,
  "sync.quietSync": true,
  "material-icon-theme.hidesExplorerArrows": true,
  "files.associations": {
    "*.rmd": "markdown"
  },

  // Auto imports
  "typescript.tsserver.log": "off",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,

  // Material icons
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "entities": "class",
    "domain": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe",
    "providers": "include",
    "subscribers": "messages",
    "useCases": "controller",
    "kafka": "scripts",
    "mappers": "meta",
    "_shared": "shared",
    "eslint-config": "tools",
    "kube": "kubernetes"
  },

  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    "*.proto": "3d",
    "*.webpack.js": "webpack"
  },
  "material-icon-theme.languages.associations": {
    "dotenv": "tune"
  },

  // Misc
  "vscode-neovim.useCtrlKeysForNormalMode": true,
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "bracket-pair-colorizer-2.showVerticalScopeLine": false,
  "cSpell.language": "en,pt-BR",
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "scm.diffDecorations": "none",
  "scm.diffDecorationsGutterAction": "none",
  "git.autofetch": true,
  "git.confirmSync": false
}
