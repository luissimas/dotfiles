#! /bin/sh

# Startup
xsetroot -cursor_name left_ptr &
pgrep -x sxhkd > /dev/null || sxhkd &

~/.config/polybar/launch.sh
~/.config/bspwm/scripts/bspwmcolors

# bspc monitor -d Δ Θ Π Ψ Ω
bspc monitor -d 1 2 3 4 5

bspc config border_width         1
bspc config window_gap           10

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config single_monocle       true
bspc config gapless_monocle      false
bspc config focus_follows_pointer true

# Rules
bspc rule -a qutebrowser desktop=^1
bspc rule -a Brave-browser desktop=^1
bspc rule -a Steam state=floating
bspc rule -a discord desktop=^5 state=floating
bspc rule -a Zathura state=tiled
bspc rule -a Emacs state=tiled
bspc rule -a Float state=floating
